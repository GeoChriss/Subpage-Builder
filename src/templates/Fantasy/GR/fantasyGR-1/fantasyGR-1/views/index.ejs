<body>
    <!-- Add after opening body tag -->
    <div class="age-verify" id="ageVerifyPopup">
        <div class="age-verify-content">
            <h2>Age Verification Required</h2>
            <p>You must be 18 years or older to access this site. Please confirm your age to continue.</p>
            <div class="age-verify-buttons">
                <button class="age-verify-yes" onclick="verifyAge(true)">I am 18 or older</button>
                <button class="age-verify-no" onclick="verifyAge(false)">I am under 18</button>
            </div>
        </div>
    </div>

    <!-- Add before closing body tag -->
    <script>
        function verifyAge(isAdult) {
            if (isAdult) {
                document.getElementById('ageVerifyPopup').style.display = 'none';
                localStorage.setItem('ageVerified', 'true');
            } else {
                window.location.href = 'https://www.begambleaware.org';
            }
        }

        // Check if age was previously verified
        window.onload = function() {
            if (!localStorage.getItem('ageVerified')) {
                document.getElementById('ageVerifyPopup').style.display = 'flex';
            } else {
                document.getElementById('ageVerifyPopup').style.display = 'none';
            }
        }
    </script>
